	  //var x = 0;
      var map, infoWindow, marker;

	  function TestMarker() {
		var templ1 = {{ l1 }}
		var templ2 = {{ l2 }}
		var temptitle = {{ title|safe }}
		var temptime = {{ time|safe }}
		var tempdate = {{ date|safe }}
		var tempetype = {{ etype|safe }}
		var templocation = {{ location|safe }}
		for (x = 0; x < templ1.length; x++){
			var tl1 = templ1[x];
			var tl2 = templ2[x];
			var ttitle = temptitle[x];
			var ttime = temptime[x];
			var tdate = tempdate[x];
			var tetype = tempetype[x];
			var tlocation = templocation[x];
		    TM(tl1, tl2, ttitle, ttime, tdate, tetype, tlocation);
		}
      }

	  function TM(l1, l2, ttitle, ttime, tdate, tetype, tlocation) {
			UCSD = new google.maps.LatLng(l1,l2);
		  	addMarker(UCSD, ttitle, ttime, tdate, tetype, tlocation);
			
	  }

      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
			center: {lat: 32.8801, lng: -117.2340}, zoom: 16 });
        infoWindow = new google.maps.InfoWindow;
        if (navigator.geolocation) {
        	navigator.geolocation.getCurrentPosition(function(position) {
            	var pos = {
              		lat: position.coords.latitude,
              		lng: position.coords.longitude
            	};   
            	infoWindow.setPosition(pos);
				var str = "Create Event Here";
            	infoWindow.setContent('You Are Here! <br> (' + position.coords.latitude + ", " + position.coords.longitude + ") <br>" +   str.link("https://ispis.herokuapp.com/pinhere"));
            	infoWindow.open(map);
            	map.setCenter(pos);
				TestMarker();
			}, function() {
            handleLocationError(true, infoWindow, map.getCenter());
        	});
        } else {
          handleLocationError(false, infoWindow, map.getCenter());
        }
	}

	function handleLocationError(browserHasGeolocation, infoWindow, pos) {
        infoWindow.setPosition(pos);
        infoWindow.open(map);
	}

    function showPosition(pos) {
        markers.push(['test', position.coords.latitude, position.coords.longitude])
    }

 function addMarker(location, ttitle, ttime, tdate, tetype, tlocation){
        marker = new google.maps.Marker({
            position: location,
            map: map
        })
		addMarkerText(marker, ttitle, ttime, tdate, tetype, tlocation);
	 }

function addMarkerText(marker, ttitle, ttime, tdate, tetype, tlocation){
        google.maps.event.addListener(marker,'click',function() {
            var contentString = '<div id="content">'+
              '<div id="mtext">'+
              '</div>'+
              '<h2>'+ttitle+'</h2>'+
              '<div id="bodyContent">'+
              '<b>Type: </b>'+ '<stuff> '+tetype+'</stuff>' + '<br><b>Date:</b>' + '<stuff> '+tdate+' </stuff>' + '<br><b>Time: </b>' + '<stuff>'+ttime+' </stuff>' +'<br><b>Location: </b>'+ '<stuff>'+tlocation+'</stuff>'
              '</div>'+
              '</div>';
            var infowindow = new google.maps.InfoWindow({
                content:contentString
        });
        infowindow.open(map,marker);
          });
        }

	</script>
